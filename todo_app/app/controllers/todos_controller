class TodosController < ApplicationController
  # index
  def index
    @todos = todo.all
  end

  # new
  def new
    @todo = todo.new
  end

  # create
  def create
    @todo = todo.create!(todo_params)

    redirect_to todo_path(@todo)
  end

  #show
  def show
    @todo = todo.find(params[:id])
  end
  private
    def todo_params
      params.require(:todo).permit(:content, :is_completed)
    end
  end
