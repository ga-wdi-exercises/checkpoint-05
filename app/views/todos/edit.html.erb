<h5><%= link_to "< Back", :back %></h5>
<h2>Editing <%= @todo.content %></h2>

<%= form_for @todo do |f| %>
  <%= f.label :content %>
  <%= f.text_field :content %>

  <%= f.label :is_completed %>
  <%= f.check_box :is_completed %>

  <%= f.submit %>
<% end %>

<%= form_for @todo, method: :delete do |f| %>
  <%= f.submit "Delete!", class: "delete" %>
<% end %>
